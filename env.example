# DigiDiploma Frontend Environment Variables
# Copy this file to .env and update with your actual values

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id
VITE_FIREBASE_VAPID_KEY=your-vapid-key-here

# API Configuration
# Production (Custom Domain)
VITE_API_URL=https://api.digidiploma.in
VITE_BACKEND_URL=https://api.digidiploma.in

# WebSocket Configuration (Optional - auto-detected from API URL)
# IMPORTANT: Use ONLY hostname without protocol (no wss:// or https://)
VITE_WS_URL=api.digidiploma.in

# Development (Local)
# VITE_API_URL=http://localhost:5000
# VITE_BACKEND_URL=http://localhost:5000
# VITE_WS_URL=localhost:5000

# App Configuration
VITE_APP_NAME=DigiDiploma
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production
VITE_APP_DOMAIN=digidiploma.in

# Admin: password required for "Delete all subjects" in Admin Subject Manager (production only)
# Set this in production so the destructive action is protected; leave unset in dev to deny by default
# VITE_ADMIN_DELETE_SUBJECTS_PASSWORD=your-secure-password
